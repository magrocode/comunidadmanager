<div class="profile-content">	
	<div class="row-fluid">
		<div class="span5 profile-info">
			<h1>
				<%= @comunidad.nombre %><br/>
				<small>
					<%= @comunidad.city %>, 
					<%= @comunidad.country %>								
				</small>
			</h1>
		</div>	
		<div class="span4 profile-info-contacto">
			<ul class="unstyled">
				<li>								
					<i class="icono16">
	            		<%= image_tag("icons/fatcow_icons/16x16/desaturados/email.png", :alt => "Email") %>
	            	</i>&nbsp;
					<%= @comunidad.email %>
				</li>
				<li>
					<i class="icono16">
	            		<%= image_tag("icons/fatcow_icons/16x16/desaturados/twitter_1.png", :alt => "Twitter") %>
	            	</i>&nbsp;
					<%= @comunidad.twitter %>
				</li>	
				<li>
					<i class="icono16">
	            		<%= image_tag("icons/fatcow_icons/16x16/desaturados/phone.png", :alt => "Telefono") %>
	            	</i>&nbsp;
					<%= @comunidad.telefono %>
				</li>
			</ul>
		</div>
		<div class="span3">
			<%= #render 'mapa' 
			%>		  
		</div>
		<div class="clear"></div>
	</div>
</div>