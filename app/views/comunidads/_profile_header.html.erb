<div class="row-fluid profile-header">	
	<div class="span5 border-right">
		<h1>
			<%= @comunidad.nombre %><br/>
			<small>
				<%= @comunidad.city %>, 
				<%= @comunidad.country %>								
			</small>
		</h1><br />
		<% if current_user.administrador? or current_user.system_admin? %>
			<div class="btn-group">
			  <button class="btn btn-small dropdown-toggle" data-toggle="dropdown">
			    Comunidad
			    <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu">
			    <!-- dropdown menu links -->
			    <li><%= link_to 'Editar', edit_comunidad_path(@comunidad) %></li>			    
			    <% if current_user.system_admin? %>
				    <li><%= link_to 'Eliminar', '#' %></li>
				    <li class="divider"></li>
				    <li><%= link_to 'Bloquear esta comunidad', '#' %></li>
			    <% end %>
			  </ul>
			</div>
		<% end %>
	</div>	
	<div class="span4">
		<ul class="unstyled">
			<li>								
				<strong>
					<i class="icono-email"></i>&nbsp;
					<%= @comunidad.email %>
				</strong>
			</li>
			<li>
				<strong>
					<i class="icono-twitter"></i>&nbsp;
					<%= @comunidad.twitter %>
				</strong>
			</li>	
			<li>
				<strong>
					<i class="icono-telefono"></i>&nbsp;
					<%= @comunidad.telefono %>
				</strong>
			</li>
		</ul>
	</div>
	<div class="span3">
		<%= #render 'mapa' 
		%>		  
	</div>	
</div>