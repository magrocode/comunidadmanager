<div class="row-fluid profile-header">	
	<div class="span5 border-right">
		<h1>
			<%= @comunidad.nombre %><br/>
			<small>
				<%= @comunidad.city %>, 
				<%= @comunidad.country %>								
			</small>
		</h1><br />
		<% if current_user.administrador? or current_user.system_admin? %>
			    <small class="small-indicator"><%= link_to 'Editar', edit_comunidad_path(@comunidad) %></small>
		<% end %>
	</div>	
	<div class="span4">
		<ul class="unstyled info-contacto">
			<li>								
					<i class="icono-email"></i>&nbsp;
					<%= link_to @comunidad.email, 'mailto:'+@comunidad.email %>
			</li>
			<li>
					<i class="icono-twitter"></i>&nbsp;
					<%= link_to @comunidad.twitter, 'http://twitter.com/'+@comunidad.twitter %>
			</li>	
			<li>
					<i class="icono-telefono"></i>&nbsp;
					<%= @comunidad.telefono %>
			</li>
		</ul>
	</div>
	<div class="span3">
		<%= #render 'mapa' 
		%>		  
	</div>	
</div>