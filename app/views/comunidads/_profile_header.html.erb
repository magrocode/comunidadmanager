<div class="row-fluid profile-header">	
	<div class="span5 border-right">
		<h1>
			<%= @comunidad.nombre %><br/>
			<small>
				<%= @comunidad.city %>, 
				<%= @comunidad.country %>								
			</small>
		</h1><br />
		<% if current_user.administrador?(current_comunidad) or current_user.system_admin? %>
			    <small class="small-indicator"><%= link_to 'Editar', edit_comunidad_path(@comunidad) %></small>
		<% end %>
	</div>	
	<div class="span4">
		<ul class="unstyled info-contacto">
			<li>								
				<i class="icono16">
            		<%= image_tag("icons/fatcow_icons/16x16/email.png", :alt => "Email") %>
            	</i>&nbsp;
				<%= @comunidad.email %>
			</li>
			<li>
				<i class="icono16">
            		<%= image_tag("icons/fatcow_icons/16x16/twitter_1.png", :alt => "Twitter") %>
            	</i>&nbsp;
				<%= @comunidad.twitter %>
			</li>	
			<li>
				<i class="icono16">
            		<%= image_tag("icons/fatcow_icons/16x16/phone.png", :alt => "Telefono") %>
            	</i>&nbsp;
				<%= @comunidad.telefono %>
			</li>
		</ul>
	</div>
	<div class="span3">
		<%= #render 'mapa' 
		%>		  
	</div>	
</div>