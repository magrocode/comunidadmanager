<%= form_for @comunidad, :html => { :class => "form-horizontal" } do |f| %>

						<%= render 'shared/error_messages', object: f.object %>
						<fieldset>
							<div class="control-group">
								<%= f.label :nombre, "Nombre comunidad", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :nombre, placeholder: "Mi condominio", class: "span6" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :street, "Calle", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :street, placeholder: "Av. General George Hucky 3556", class: "span6" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :city, "Ciudad", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :city, placeholder: "Cloudappolis", class: "span5" %>
								</div>
							</div>
							
							<div class="control-group">
								<%= f.label :country, "Pais", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :country, placeholder: "Mi pais", class: "span5" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :email, "Email", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :email, placeholder: "mi@comunidad.com", class: "span5" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :twitter, "Twitter", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :twitter , placeholder: "@micomunidad", class: "span5" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :telefono, "Telefono", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :telefono, placeholder: "56-2-155-5555", class: "span5" %>
								</div>
							</div>
						</fieldset>
							<div class="form-actions">
								<%= f.submit "Actualizar Comunidad", :class => "btn btn-primary" %> o
								<%= link_to "Cancelar", :back %>
							</div>
					<% end %>