<% provide(:titulo, 'Editando comunidad')%>
<div class="row-fluid">
	<div class="span2">
		<%= render 'menu_comunidad' %>
	</div>
	<div class="span8">
		<div class="content-wrapper">
			<div class="row-fluid profile-header"><h2>Editando comunidad</h2></div>
			<div class="row-fluid">
				<div class="span7">
					<%= form_for @comunidad, :html => { :class => "form-horizontal" } do |f| %>

						<%= render 'shared/error_messages', object: f.object %>
						<fieldset>
							<div class="control-group">
								<%= f.label :nombre, "Nombre comunidad", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :nombre, placeholder: "Mi condominio" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :street, "Calle", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :street, placeholder: "Av. General George Hucky 3556" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :city, "Ciudad", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :city, placeholder: "Cloudappolis" %>
								</div>
							</div>
							
							<div class="control-group">
								<%= f.label :country, "Pais", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :country, placeholder: "Mi pais" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :email, "Email", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :email, placeholder: "mi@comunidad.com" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :twitter, "Twitter", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :twitter , placeholder: "@micomunidad" %>
								</div>
							</div>

							<div class="control-group">
								<%= f.label :telefono, "Telefono", class: "control-label" %>
								<div class="controls">
									<%= f.text_field :telefono, placeholder: "56-2-155-5555" %>
								</div>
							</div>
						</fieldset>
							<div class="form-actions">
								<%= f.submit "Enviar", :class => "btn btn-large btn-primary" %>
							</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
