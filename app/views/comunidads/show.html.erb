<% provide(:titulo, @comunidad.nombre)%>
<div class="row-fluid">
	<div class="span2">
		<%= render 'menu_comunidad' %>
	</div>	
	<div class="span10">
		<div class="content-wrapper">
			<div class="row-fluid profile-header">	
					<div class="span5 border-right">
						<h1>
							<%= @comunidad.nombre %><br/>
							<small>
								<%= @comunidad.city %>, 
								<%= @comunidad.country %>								
							</small>
						</h1>
						<% if @current_user.administrador? %>
							<small class="small-indicator">
							<%= link_to 'Editar', edit_comunidad_path(@comunidad) %></small>
						<% end %>
					</div>	
					<div class="span4">
						<ul class="unstyled">
							<li>								
								<strong>
									<i class="icono-email"></i>&nbsp;
									<%= @comunidad.email %>
								</strong>
							</li>
							<li>
								<strong>
								<i class="icono-twitter"></i>&nbsp;
								<%= @comunidad.twitter %></strong>
							</li>	
							<li>
								<strong>
								<i class="icono-telefono"></i>&nbsp;
								<%= @comunidad.telefono %></strong>
							</li>
						</ul>
					</div>
					<div class="span3">
						<%= #render 'mapa' 
						%>		  
					</div>	
			</div>
			<div class="row-fluid">
				<div class="span9">
					<div class="row-fluid">
						<div class="span9">
							<strong>Notas o Emails de la comunidad</strong>
						</div>
					</div>
				</div>
				<div class="span3">
					<div class="row-fluid">
						<%= render 'administrador' %>
					</div>
				</div>
			</div>	
			<div class="clear"></div>
		</div>
  	</div>
</div>