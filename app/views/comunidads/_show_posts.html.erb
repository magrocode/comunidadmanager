<div class="row-fluid">
	<div class="span12">


		<table class="table">

	
			<% @comunidad.posts.each do |post| %>
			<tr>
				<td>
					<h4><i class="icon-file"></i>&nbsp; Posted <%= post.created_at %> ago.</h4>
					<small class="small-indicator">Asunto: <%= post.titulo %></small><br>
					<small class="small-indicator">Escrito por: <%= post.usuario.nombre %></small>
				</td>

				<% if current_user.administrador? or current_user.system_admin? %>					
					<td>
						<div class="btn-group pull-right">
						  <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
						    <i class="icon-cog"></i>
						    <span class="caret"></span>
						  </a>
						  <ul class="dropdown-menu">
						    <li><%= link_to 'Editar', '#' %></li>
						    <li><%= link_to 'Eliminar', post, confirm: 'Estas seguro de eliminar?', :method => :delete %></li>
						  </ul>
						</div>
					</td>	
				<% end %>
			</tr>
			<% end %>
		</table>

	</div>
</div>