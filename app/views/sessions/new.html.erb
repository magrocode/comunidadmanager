<% provide(:titulo, "Sign in") %>
<div class="row">
	<div class="span5 offset4">
		<div class="content-wrapper">
			<div class="page-header center"><h1>Sign in</h1></div>
			<div class="row">
				<div class="span4">
					<%= form_for(:session, :url => sessions_path) do |f| %>
						
						<%= f.label :email %>
						<%= f.text_field :email %>
						
						<%= f.label :password %>
						<%= f.password_field :password %>
						
						<%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
					<% end %>
					
					<p>Tu comunidad no tiene una cuenta?<br /> <%= link_to "Crea una cuenta ahora!", signup_path %></p>
				</div>
			</div>
		</div>
	</div>
</div>