<% provide(:titulo, "Sign in") %>
<div class="row">
	<div class="span4 offset4">
		<div class="well">
			<div class="profile-header center">
				<h1>Sign in</h1>
			</div>
			<div class="row">
				<div class="span3 center">
					<%= form_for :session, :url => sessions_path, html: { class: "span3" } do |f| %>
						
						<%= f.text_field :email, placeholder: "Email" %>
						
						<%= f.password_field :password, placeholder: "Password" %>
						
						<%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
					<% end %>					
				</div>
			</div>
			<div class="row">
				<div class="span3 center">
					<p class="span3">Tu comunidad no tiene una cuenta?<br /> <%= link_to "Crea una cuenta ahora!", signup_path %></p>
				</div>
			</div>
		</div>
	</div>
</div>