<% provide(:titulo, "Sign in") %>
<div id="sign_in_wrapper" class="row">
	<div class="span5 offset5">
		<div class="well transparent-box">
			<div class="profile-header center">
				<h1>Sign in</h1>
			</div>
			<div class="row-fluid">
				<div class="span12 center">
					<%= form_for :session, :url => sessions_path, html: { class: "span10" } do |f| %>
						
						<%= f.text_field :email, placeholder: "Email" %>
						
						<%= f.password_field :password, placeholder: "Password" %>
						
						<%= f.submit "Entrar", :class => "btn btn-large btn-primary" %>
					<% end %>					
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12 center">
					<p class="span10">Tu comunidad no tiene una cuenta?<br /> <%= link_to "Crea una cuenta ahora!", signup_path %></p>
				</div>
			</div>
		</div>
	</div>
</div>