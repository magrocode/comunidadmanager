<%= form_for [@comunidad, @post], :html => { :class => "form-horizontal" } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<fieldset>

		<div class="control-group">
			<%= f.label :titulo, class: "control-label" %>
			<div class="controls">
				<%= f.text_field :titulo, class: "span4" %>
			</div>
		</div>
				
		<div class="control-group">
			<%= f.label :contenido, class: "control-label" %>
			<div class="controls">
				<%= f.text_area :contenido, class: "span4" %>
			</div>
		</div>

	</fieldset>
	<div class="form-actions">
		<%= f.submit "Guardar", class: "btn btn-primary" %> o
		<%= link_to "Cancelar", :back %>
	</div>
<% end %>