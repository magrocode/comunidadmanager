<%= render 'modal_vincular_unidades' %>
<div class="profile-content">	
	<div class="row-fluid">
		<div class="span8 profile-simple">
			<h2>Vinculando unidades o viviendas a <%= @unidad.identificador %></h2>
		</div>
		<div class="span4 profile-actions">
			<% if current_user.administrador?(current_comunidad) or current_user.system_admin? %>
				<a data-toggle="modal" href="#modalVincularUnidades" class="btn btn-small btn-primary">
				<i class="icon-plus-sign icon-white"></i> Vincular unidad</a>
			<% end %>
		</div>
		<div class="clear"></div>
	</div>
</div>