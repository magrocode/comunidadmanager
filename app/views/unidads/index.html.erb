<table class="table table-bordered table-striped">
	<tr>
		<th>Identificador</th>
		<th>% Participacion</th>
		<th></th>
	</tr>
<% @unidads.each do |unidad| %>
	<tr>
		<td><%= link_to unidad.identificador, unidad %></td>
		<td><%= unidad.participacion %></td>
		<td class="ar">
			<small>
			<%= link_to 'Mostrar', '#' %> |
			<%= link_to 'Editar', '#' %> |
			<%= link_to 'Eliminar', unidad, confirm: 'Estas seguro de eliminar?', :method => :delete %>
			</small>
		</td>	
	</tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva unidad', new_comunidad_unidad_path, :class => 'btn btn-primary btn-large' %>
