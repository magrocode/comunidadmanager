<div class="modal hide fade" id="modalAutorizarUsuarios" style="display: none;">
	<div class="modal-header">
		<button class="close" data-dismiss="modal">Ã—</button>
    	<h3>Autorizar usuarios</h3>
 	</div>
  	<div class="modal-body">
    	<p>Autorice usuarios para ver esta unidad</p>

					<table class="table table-bordered table-striped">
						<tr>
							<th>Nombre</th>
							<th>Email</th>
							<th></th>
						</tr>
					<% @comunidad.usuarios.each do |usuario| %>
						<tr>
							<td>
								<%= usuario.nombre %> 
								<% if usuario.administrador? %>
									<span class="label label-info">Administrador</span>
								<% end %>
							</td>
							<td><%= usuario.email %></td>
							<td>
								<%= render 'autorizar_usuario_form', usuario: usuario %>
							</td>
						</tr>
					<% end %>
					</table>
  	</div>
  	<div class="modal-footer">
    	<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
  	</div>
</div>