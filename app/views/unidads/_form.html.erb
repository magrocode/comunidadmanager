<%= form_for [@comunidad, @unidad], :html => { :class => "form-horizontal" } do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<fieldset>

		<div class="control-group">
			<%= f.label :identificador, class: "control-label" %>
			<div class="controls">
				<%= f.text_field :identificador, class: "span4" %>
			</div>
		</div>
				
		<div class="control-group">
			<%= f.label :participacion, "% Participacion", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :participacion, :step => "0.0001", :min => 0 , class: "span4" %>
			</div>
		</div>

		<div class="control-group">				
			<%= f.label :superficie, "Superficie en m2", class: "control-label" %>
			<div class="controls">
				<%= f.number_field :superficie, :step => "0.01", class: "span4" %>
			</div>
		</div>


		<div class="control-group">
			<%= f.label :tipounidad, "Tipo de unidad", class: "control-label" %>
			<div class="controls">
					<%= collection_select :unidad, :tipounidad_id, @comunidad.tipounidads, :id, :nombre, {} , {class: "span7"} %>&nbsp;
					<span>Gestiona los <%= link_to 'Tipos de unidad', comunidad_tipounidads_path(@comunidad) %></span>
			</div>
		</div>

	</fieldset>
	<div class="form-actions">
		<%= f.submit "Guardar", class: "btn btn-primary" %> o
		<%= link_to "Cancelar", :back %>
	</div>
<% end %>