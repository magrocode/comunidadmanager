<% provide(:titulo, @unidad.identificador) %>
<h1>Unidad</h1>

<div class="row">
	<div class="span6 offset3">
		<p>
			<b>Identificador:</b>
			<%= @unidad.identificador %>
		</p>
		<p>
			<b>Participacion:</b>
			<%= @unidad.participacion %>
		</p>
		<p>
			<span class="badge badge-inverse"><%= @unidad.comunidad.nombre %></span>	
		</p>
	</div>
</div>
		
<%= link_to 'Editar', edit_unidad_path(@unidad) %>
<%= link_to 'Unidades', comunidad_unidads_path(@unidad.comunidad) %>
