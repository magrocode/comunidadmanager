<div class="profile-content">	
	<div class="row-fluid">
		<div class="span8 profile-simple">
			<h2>Unidades en <%= @comunidad.nombre %></h2>
		</div>	
		<div class="span4 profile-actions">
			<% if current_user.administrador?(current_comunidad) or current_user.system_admin? %>
				<%= link_to(new_comunidad_unidad_path(@comunidad), class: 'btn btn-small btn-primary') do %>
	  				<i class="icon-plus-sign icon-white"></i> Nueva unidad
				<% end %>
			<% end %>
		</div>
	</div>
</div>