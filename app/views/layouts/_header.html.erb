<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		
		<% if signed_in? %>
			
			<div class="container-fluid">
				<a class="brand" href="#">
  					<%= link_to "Cloudapolis", root_path, id: "logo" %>	
				</a>
				<nav>
					
					<ul class="nav pull-left">
						<li><%= link_to 'Bienvenido', wellcome_path %></li>
						<li><%= link_to 'Comunidad', comunidad_path(current_user.comunidad) %></li>
					</ul>
					
					<ul class="nav pull-right">
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<% if current_user.administrador? %><i class="icon-lock icon-white"></i><% end %>
								<%= current_user.email %><b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to "Perfil", current_user %></li>
								<li><%= link_to "Configuracion", edit_usuario_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to "Sign out", signout_path, method: "delete"%></li>
							</ul>
						</li>
					</ul>
				</nav>
			</div>
		
		<% else %>
		
			<div class="container">
				<a class="brand" href="#">
  					<%= link_to "Cloudapolis", root_path, id: "logo" %>	
				</a>
				<nav>
					<ul class="nav pull-right">
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Tour", '#' %></li>
						<li><%= link_to "Precios y planes", '#' %></li>
						<li><%= link_to "Contacto", '#' %></li>
						<li><%= link_to "Blog", '#' %></li>
						<li><%= link_to "Sign in", signin_path %></li>
					</ul>
				</nav>
			</div>
		
		<% end %>
	</div>
</header>
