<header class="navbar navbar-fixed-top">

	<% if signed_in? %>

		<div class="navbar-inner">
			<div class="container-fluid">
				
  				<%= link_to "Cloudapolis", root_path, id: "logo" %>	
				
				<nav>
					
					<ul class="nav pull-left">
						<li><%= link_to 'Panel de control', wellcome_path %></li>
						<li><%= link_to 'Comunidad', comunidad_path(current_user.comunidad) %></li>
						<li><%= link_to 'Mi Perfil', current_user %></li>
					</ul>
					
					<ul class="nav pull-right">
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<%= gravatar_for current_user, size: 22 %>
								<%= current_user.nombre %>
								<% if current_user.administrador? %>
								(administrador)
								<% end %>
								<b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to "Mi Perfil", current_user %></li>
								<li><%= link_to "Configuracion", edit_usuario_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to "Sign out", signout_path, method: "delete"%></li>
							</ul>
						</li>
					</ul>
				</nav>
			</div>
	<% else %>

		<div class="navbar-inner-white">
			<div class="container">
				<%= link_to "Cloudapolis", root_path, id: "logo" %>	
				
				<nav>
					<ul class="nav pull-right">
						<li><%= link_to "Home", root_path %></li>
						<li><%= link_to "Tour", '#' %></li>
						<li><%= link_to "Precios y planes", '#' %></li>
						<li><%= link_to "Contacto", '#' %></li>
						<li><%= link_to "Blog", '#' %></li>
						<li><%= link_to "Sign in", signin_path %></li>
					</ul>
				</nav>
			</div>
		
		<% end %>
	</div> <!-- fin navbar inner -->
</header>
