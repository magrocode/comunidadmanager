<div class="profile-content">
	<div class="row-fluid">
		<div class="span10 profile-simple">
			<h2>Todos los usuarios en <%= @comunidad.nombre %></h2>
		</div>	
		<div class="span2 profile-actions">
			<% if current_user.administrador?(current_comunidad) or current_user.system_admin? %>
				<%= link_to(new_comunidad_usuario_path(@comunidad), class: 'btn btn-small btn-primary') do %>
	  				<i class="icon-plus-sign icon-white"></i> Nuevo usuario
				<% end %>
			<% end %>
		</div>
	</div>
</div>