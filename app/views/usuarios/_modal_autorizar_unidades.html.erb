<div class="modal hide fade" id="modalAutorizarUnidades" style="display: none;">
	<div class="modal-header">
		<button class="close" data-dismiss="modal">Ã—</button>
    	<h3>Autorizar Unidades</h3>
 	</div>
 	<div class="modal-body">
 		<p>Autorice unidades para este usuario</p>
 		
 			<table class="table table-bordered table-striped">
					<tr>
						<th>Identificador</th>
						<th>% Participacion</th>
						<th>Superficie m2</th>
						<th></th>
					</tr>
				<% @comunidad.unidads.each do |unidad| %>
					<tr>
						<td>
							<%= unidad.identificador %> 
							<% if !unidad.tipounidad.nil? %>
								<span class="label label-info">
									<%= unidad.tipounidad.nombre %>
								</span>
							<% end %>
						</td>
						<td><%= unidad.participacion %></td>
						<td><%= unidad.superficie %></td>
						<td>
							<%= render 'autorizar_unidad_form', unidad: unidad %>
						</td>
					</tr>
				<% end %>
			</table>
 	</div>
 	<div class="modal-footer">
    	<a href="#" class="btn" data-dismiss="modal">Cerrar</a>
  	</div>
</div>