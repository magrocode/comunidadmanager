<div class="row">
	<div class="span6 offset3">
		<%= form_for([@comunidad, @usuario]) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.label :email %>
			<%= f.email_field :email %>
			
			<%= f.label :nombre %>
			<%= f.text_field :nombre %>
			
			<%= f.label "Atributos de usuario" %>
			<%= f.check_box_field :administrador %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmacion" %>
			<%= f.password_field :password_confirmation %>
			
			<%= f.submit "Enviar", :class => "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>