<div class="row">
	<div class="span6 offset5">
		<%= form_for([@comunidad, @usuario]) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<fieldset>
			<%= f.label :email %>
			<%= f.email_field :email %>
			
			<%= f.label :nombre %>
			<%= f.text_field :nombre %>
			
			<%= f.label :administrador, "Administrador?" %>
			<%= f.check_box :administrador %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmacion" %>
			<%= f.password_field :password_confirmation %>
			</fieldset>
			<%= f.submit "Enviar", :class => "btn btn-large btn-primary" %>	
		<% end %>
	</div>
</div>	